{
  "name": "bank-statement-summarizer",
  "version": "1.0.0",
  "description": "AI-powered bank statement PDF summarizer with privacy focus",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "start": "concurrently \"npm run start --workspace=apps/backend\" \"npm run start --workspace=apps/frontend\"",
    "install:all": "npm install && npm install --workspace=apps/backend && npm install --workspace=apps/frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "bank-statement",
    "pdf-parser",
    "ai-summarizer",
    "privacy-focused",
    "monorepo"
  ],
  "author": "Your Name",
  "license": "MIT"
}
